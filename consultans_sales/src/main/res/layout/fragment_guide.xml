<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_guide_dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fl_guide_next"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dots_one"
            android:layout_width="28dp"
            android:layout_height="7dp"
            android:background="@drawable/shape_guide_dots_select" />

        <ImageView
            android:id="@+id/iv_dots_two"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_guide_dots_unselect" />

        <ImageView
            android:id="@+id/iv_dots_three"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_guide_dots_unselect" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_guide_next"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_guide_next"
        android:elevation="5dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/next"
            android:textColor="@color/white_color"
            android:textSize="16sp" />
    </FrameLayout>
</RelativeLayout>
